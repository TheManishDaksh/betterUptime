generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  name     String?
  password String    @unique
  websites Website[]
}

model Website {
  id        String        @id @default(uuid())
  url       String
  userId    String
  timeAdded DateTime
  user      User          @relation(fields: [userId], references: [id])
  ticks     WebsiteTick[]
}

model Region {
  id    String        @id @default(uuid())
  name  String
  ticks WebsiteTick[]
}

model WebsiteTick {
  id               String        @id @default(uuid())
  response_time_mc Int
  status           WebsiteStatus
  region_id        String
  website_id       String
  region           Region        @relation(fields: [region_id], references: [id])
  website          Website       @relation(fields: [website_id], references: [id])
}

enum WebsiteStatus {
  up
  down
  unknown
}
