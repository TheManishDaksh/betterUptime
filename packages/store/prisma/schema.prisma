generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id  @default(uuid())
  email     String   @unique
  name      String?
  password  String @unique 
  websites  Website[]
}

model Website {
  id            String   @id  @default(uuid())
  url           String
  user          User     @relation(references: [id], fields: [userId])
  userId        String 
  timeAdded     DateTime 
  ticks         WebsiteTick[]
}

model Region {
  id        String @id  @default(uuid())
  name      String
  ticks     WebsiteTick[]
}

model WebsiteTick {
  id                  String  @id  @default(uuid())
  response_time_mc    Int
  status              WebsiteStatus
  region              Region   @relation(references: [id], fields: [region_id]) 
  website             Website @relation(references: [id], fields: [website_id]) 
  region_id           String
  website_id          String
}

enum WebsiteStatus {
  up 
  down
  unknown
}